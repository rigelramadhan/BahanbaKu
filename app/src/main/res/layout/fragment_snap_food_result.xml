<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.snapfood.result.SnapFoodResultFragment">

    <ImageView
        android:id="@+id/container_snaprecipe"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="-16dp"
        android:src="@drawable/dr_page_container_down_2"
        app:layout_constraintBottom_toBottomOf="@+id/btn_snap"/>

    <ImageView
        android:id="@+id/img_snap_recipe"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:elevation="2dp"
        app:layout_constraintStart_toStartOf="@id/container_snaprecipe"
        app:layout_constraintTop_toTopOf="@id/container_snaprecipe"
        tools:srcCompat="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/tv_title"
        style="@style/Text.Title.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:elevation="2dp"
        android:text="@string/turn_snap_into_reality"
        app:layout_constraintStart_toEndOf="@id/img_snap_recipe"
        app:layout_constraintTop_toTopOf="@id/img_snap_recipe" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="@id/container_snaprecipe"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:elevation="2dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/snapfood_description_before"/>

    <Button
        android:id="@+id/btn_snap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Button.Small"
        android:text="@string/snap_a_food"
        app:layout_constraintTop_toBottomOf="@+id/tv_description"
        android:elevation="5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@id/container_snaprecipe"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_foods"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/container_snaprecipe"
        tools:listitem="@layout/item_food"/>
</androidx.constraintlayout.widget.ConstraintLayout>