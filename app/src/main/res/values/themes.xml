<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BahanbaKu" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

<!--    TEXT FIELD-->
    <style name="TextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusBottomStart">11dp</item>
        <item name="boxCornerRadiusBottomEnd">11dp</item>
        <item name="boxCornerRadiusTopStart">11dp</item>
        <item name="boxCornerRadiusTopEnd">11dp</item>
    </style>

<!--    BUTTON-->
    <style name="Button">
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Active">
        <item name="android:background">@drawable/dr_button_active</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Button.Small">
        <item name="android:background">@drawable/dr_button_active</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
    </style>

    <style name="Button.Active.Google">
        <item name="android:background">@drawable/dr_button_google</item>
        <item name="android:textColor">@color/primary</item>
    </style>

<!--    TYPOGRAPHY-->
    <style name="Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Body">
        <item name="android:textColor">#8E8E8E</item>
    </style>

    <style name="Text.Body.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Body.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Body.Large">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Title">
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.Title.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Title.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Title.Large">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Text.Headline">
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="Text.Headline.Small">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Headline.Medium">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Text.Headline.Large">
        <item name="android:textSize">32sp</item>
    </style>
</resources>
