<resources>
    <!-- Base application theme. -->
    <style name="Theme.BahanbaKu" parent="Theme.Material3.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSurfaceVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/secondary</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/primary</item>

        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="ActionBar" parent="Widget.Material3.Light.ActionBar.Solid">
        <item name="background">@color/white</item>
    </style>

    <style name="SplashScreen" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>

<!--    DIALOG FRAGMENTS-->
    <style name="TransparentDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

<!--    BOTTOM NAV-->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">@color/primary_lighter</item>
        <item name="colorOnSurfaceVariant">@color/primary</item>
    </style>

<!--    TEXT FIELD-->
    <style name="TextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/secondary</item>
        <item name="hintTextColor">@color/secondary</item>
        <item name="titleTextColor">@color/secondary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
    </style>

    <style name="TextField.Password">
        <item name="endIconMode">password_toggle</item>
        <item name="endIconTint">@color/secondary</item>
    </style>

<!--    PROGRESS BAR-->
    <style name="ProgressBar">
        <item name="android:visibility">invisible</item>
    </style>

<!--    BUTTON-->
    <style name="Button">
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Button.Active">
        <item name="android:background">@drawable/dr_button_active</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Button.Active.Secondary">
        <item name="android:background">@drawable/dr_button_active_secondary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Active.Third">
        <item name="android:background">@drawable/dr_button_active_third</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button.Small">
        <item name="android:background">@drawable/dr_button_active</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
    </style>

    <style name="Button.Active.Google">
        <item name="android:background">@drawable/dr_button_google</item>
        <item name="android:textColor">@color/primary</item>
    </style>

<!--    TYPOGRAPHY-->
    <style name="Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Body">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Body.Small">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="Text.Body.Medium">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="Text.Body.Large">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Title">
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.Title.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Title.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Title.Large">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Text.Headline">
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="Text.Headline.Small">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Headline.Medium">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Text.Headline.Large">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Text.Link">
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewBold">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
